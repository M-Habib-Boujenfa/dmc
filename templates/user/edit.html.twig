{% extends 'admin.html.twig' %}

{% block css %}
<link rel="stylesheet" href="{{ absolute_url("/css/edit.css") }}">
{% endblock %}

{% block body %}
{% if is_granted('ROLE_SUPER_ADMIN') %}
<section class="container">
    <h2 class="text-center text-primary">ATTRIBUTION DE RÔLES UTILISATEURS</h2>
    <hr>
    <div class="text-center container">
    {{ include('user/_form.html.twig', {'button_label': "Modifier le rôle de l'utilisateur"}) }}
    </div>
    <div class="d-flex align-items-center justify-content-between">
    <button type="button" class="btn btn-primary"><a class="text-decoration-none text-white text-uppercase" href="{{ path('app_user_index') }}">Retour à la liste</a></button>

    {{ include('user/_delete_form.html.twig') }}
        </div>
</section>
{% else %}
<link rel="stylesheet" href="{{ absolute_url("/css/index.css") }}">
<section class="text-center">
<h1 class="text-warning text-uppercase">Accès reservé</h1>
<img id="interdit" src="../image/acces-interdit.png" alt="">
</section>
{% endif %}
{% endblock %}
